<%= bootstrap_form_for(student,inline_errors: false) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  <%= f.text_field :firstname %>
  <%= f.text_field :lastname %>
  <%= f.text_field :pesel %>
  <%= f.select :field, options_for_select(Student::FIELDS) %>
  <%= f.primary %>
<% end %>
